<Page
    x:Class="ChocoDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChocoDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Column="0" Grid.Row="0">
            <Image Source="Assets/th.jpg" Height ="200" Margin="0, 20, 0, 0 " />
            <Button x:ConnectionId='1' 
                    FontSize="66" Margin="50, 40, 0 , 0" 
                    x:Name="newOrderButton"                               >
                        New Order</Button>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0">
            <TextBlock FontSize="45">New Order Picture</TextBlock>
            <TextBlock FontSize="66">New Order</TextBlock>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="0">
            <TextBlock FontSize="45">New Order Picture</TextBlock>
            <TextBlock FontSize="66">New Order</TextBlock>
        </StackPanel>


        <StackPanel Grid.Column="0" Grid.Row="1">
            <TextBlock FontSize="45">New Order Picture</TextBlock>
            <TextBlock FontSize="66">New Order</TextBlock>
        </StackPanel>


    </Grid>
</Page>

